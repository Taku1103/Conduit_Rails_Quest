<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign in</h1>
        <p class="text-xs-center">
          <a href="/register">Need an account?</a>
        </p>

        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>


        <%= form_with(url: login_path, scope: :session) do |f| %>
        <fieldset>
        <fieldset class="form-group">
            <%= f.text_field  :email, class: 'form-control form-control-lg' , placeholder: "Email"%>
        </fieldset>
        <fieldset class="form-group">
            <%= f.text_field :password, class: 'form-control form-control-lg' , placeholder: "Password"%>
        </fieldset>
        <fieldset>
            <%= f.submit "Sign in", class: "btn btn-lg pull-xs-right btn-primary" %>
        </fieldset>
        <% end %>

      </div>
    </div>
  </div>
</div>