<div class="article-page">
  <div class="banner">
    <div class="container">
      <h1><%= @article.title %></h1>

      <div class="article-meta">
        <a href="<%= user_path(@article.user.id) %>"><img src="http://i.imgur.com/Qr71crq.jpg" /></a>
        <div class="info">
          <%= link_to "#{@article.user.name}" , user_path(@article.user.id), class: "author" %>
          <span class="date"><%= @article.created_at.strftime('%Y/%m/%d') %></span>
        </div>

      <% if @article.user == current_user %>
        <%= link_to edit_article_path, class: 'edit btn btn-sm btn-outline-secondary' do %>
          <i class="ion-edit"></i>
          &nbsp; Edit Article
        <% end %>

        &nbsp;&nbsp;
        <%= link_to article_path, data: { turbo_method: :delete , turbo_confirm: '本当に削除していいですか?' } , class: 'delete btn btn-sm btn-outline-danger' do %>
          <i class="ion-trash-a"></i>
          &nbsp; Delete Article
        <% end %>
      <% else %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="container page">
    <div class="row article-content">
      <div class="col-md-12">
        <p>
          <%= @article.content %>
        </p>

        <ul class="tag-list">
          <li class="tag-default tag-pill tag-outline"><%= @article.tag %></li>
        </ul>
      </div>
    </div>
  </div>

</div>