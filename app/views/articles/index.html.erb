<div class="home-page">
  <div class="banner">
    <div class="container">
      <h1 class="logo-font">conduit</h1>
      <p>A place to share your knowledge.</p>
    </div>
  </div>

  <div class="container page">
    <div class="row">
      <div class="col-md-9">
        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
        <div class="feed-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <a class="nav-link active" href="">Global Feed</a>
            </li>
          </ul>
        </div>

      <% @articles.each do |article| %>
        <div class="article-preview">
          <div class="article-meta">

            <a href="/profile/eric-simons"><img src="http://i.imgur.com/Qr71crq.jpg" /></a>
            <div class="info">
              <%= link_to "#{article.user.name}" , user_path(article.user.id), class: "author" %>
              <span class="date"><%= article.created_at.strftime('%Y/%m/%d') %></span>
            </div>
            <button class="btn btn-outline-primary btn-sm pull-xs-right">
              <i class="ion-heart"></i> <%= rand(0..100) %>
            </button>
          </div>

          <%= link_to article_path(article.id) , class: "preview-link" do %>
            <h1><%= article.title%></h1>
            <p><%= article.content %></p>
            <span>Read more...</span>
            <ul class="tag-list">
              <li class="tag-default tag-pill tag-outline"><%= article.tag %></li>
            </ul>
          <% end %>
        </div>
      <% end %>

    <%= will_paginate @articles , renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

    </div>
  </div>
</div>



